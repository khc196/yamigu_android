<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bottom_border"
        android:paddingLeft="39dp"
        android:text="정보"
        android:textSize="20dp"
        android:textColor="@color/colorNormal"
        android:gravity="center_vertical"
        android:fontFamily="@font/nanumgothic_font_family"
        android:textStyle="bold"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/bottom_border_gray"
        android:orientation="vertical">
        <Button
            android:id="@+id/btn_app_version"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingRight="39dp"
            android:paddingLeft="39dp"
            android:text="앱 버전"
            android:gravity="left|center_vertical"
            android:textSize="14dp"
            android:textColor="@color/colorNormal"
            android:background="?android:selectableItemBackground"
            style="?android:attr/borderlessButtonStyle"
            android:fontFamily="@font/nanumgothic_font_family"/>
        <TextView
            android:id="@+id/tv_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:text="1.0.0"
            android:textColor="@color/colorPoint"
            android:layout_marginRight="39dp"
            android:textSize="14dp"
            android:fontFamily="@font/nanumgothic_font_family"
            />
    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/bottom_border_gray"
        android:orientation="vertical">
        <Button
            android:id="@+id/btn_view_private"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingRight="39dp"
            android:paddingLeft="39dp"
            android:text="개인정보 취급방침"
            android:gravity="left|center_vertical"
            android:textSize="14dp"
            android:textColor="@color/colorNormal"
            android:background="?android:selectableItemBackground"
            style="?android:attr/borderlessButtonStyle"
            android:fontFamily="@font/nanumgothic_font_family"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/bottom_border_gray"
        android:orientation="vertical">
        <Button
            android:id="@+id/btn_view_using"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingRight="39dp"
            android:paddingLeft="39dp"
            android:text="서비스 이용약관"
            android:gravity="left|center_vertical"
            android:textSize="14dp"
            android:textColor="@color/colorNormal"
            android:background="?android:selectableItemBackground"
            style="?android:attr/borderlessButtonStyle"
            android:fontFamily="@font/nanumgothic_font_family"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/bottom_border_gray"
        android:orientation="vertical">
        <Button
            android:id="@+id/btn_logout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingRight="39dp"
            android:paddingLeft="39dp"
            android:text="로그아웃"
            android:gravity="left|center_vertical"
            android:textSize="14dp"
            android:textColor="@color/colorNormal"
            android:background="?android:selectableItemBackground"
            style="?android:attr/borderlessButtonStyle"
            android:fontFamily="@font/nanumgothic_font_family"/>
    </LinearLayout>
</LinearLayout>
