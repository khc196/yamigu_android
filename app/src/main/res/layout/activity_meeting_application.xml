<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".Activity.MeetingApplicationActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:background="@color/colorPrimary"
            android:theme="@style/MyActionBar2"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="미팅 신청"
                android:textColor="@color/colorNormal"
                android:textSize="14dp"
                android:fontFamily="@font/nanumgothic_font_family"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:id="@+id/toolbar_title" />
        </androidx.appcompat.widget.Toolbar>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="9"
                android:layout_marginBottom="63dp"
                >
                <RelativeLayout
                    android:id="@+id/selected_type"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="3"
                    android:background="@drawable/bottom_border_gray2">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true">
                        <TextView
                            android:id="@+id/selected_type_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14dp"
                            android:text="인원"
                            android:textColor="@color/colorNonselect"
                            android:fontFamily="@font/nanumgothic_font_family"/>
                        <ImageView
                            android:id="@+id/type_triangle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="6dp"
                            android:background="@drawable/triangle_gray"/>
                    </LinearLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/selected_date"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="3"
                    android:background="@drawable/bottom_border_gray2">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true">
                        <TextView
                            android:id="@+id/selected_date_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14dp"
                            android:text="날짜"
                            android:textColor="@color/colorNonselect"
                            android:fontFamily="@font/nanumgothic_font_family"/>
                        <ImageView
                            android:id="@+id/date_triangle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="6dp"
                            android:background="@drawable/triangle_gray"/>
                    </LinearLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/selected_place"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="3"
                    android:background="@drawable/bottom_border_gray2">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/selected_place_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorNonselect"
                            android:textSize="14dp"
                            android:text="선호 장소"
                            android:fontFamily="@font/nanumgothic_font_family"/>

                        <ImageView
                            android:id="@+id/place_triangle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="6dp"
                            android:background="@drawable/triangle_gray" />
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/type_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <ImageView
                    android:id="@+id/question_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="7dp"
                    android:src="@drawable/question_type"
                    />
                <LinearLayout
                    android:id="@+id/select_pane_type"
                    android:layout_width="387dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16.7dp"
                    android:layout_gravity="center_horizontal"
                    android:orientation="vertical"
                    android:background="@drawable/shadow_box">
                    <Button
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:padding="0dp"
                        android:id="@+id/btn_select_2vs2"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="379dp"
                        android:layout_height="62dp"
                        android:background="@null"
                        android:text="2:2 미팅"
                        android:gravity="center"
                        android:fontFamily="@font/nanumgothic_font_family"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#D9D9D9"
                        ></LinearLayout>
                    <Button
                        android:id="@+id/btn_select_3vs3"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="379dp"
                        android:layout_height="62dp"
                        android:background="@null"
                        android:text="3:3 미팅"
                        android:fontFamily="@font/nanumgothic_font_family"
                        android:gravity="center"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#D9D9D9"
                        ></LinearLayout>
                    <Button
                        android:id="@+id/btn_select_4vs4"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="379dp"
                        android:layout_height="62dp"
                        android:background="@null"
                        android:text="4:4 미팅"
                        android:fontFamily="@font/nanumgothic_font_family"
                        android:gravity="center"
                        />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/date_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <ImageView
                    android:id="@+id/question_when"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="16.7dp"
                    android:src="@drawable/question_when"
                    />
                <LinearLayout
                    android:id="@+id/select_pane_when"
                    android:layout_width="387dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16.7dp"
                    android:layout_gravity="center_horizontal"
                    android:orientation="vertical"
                    android:background="@drawable/shadow_box">
                    <Button
                        android:id="@+id/btn_select_date1"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="379dp"
                        android:layout_height="55dp"
                        android:background="@null"
                        android:text="5월 28일"
                        android:fontFamily="@font/nanumgothic_font_family"
                        android:gravity="center"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#D9D9D9"
                        ></LinearLayout>
                    <Button
                        android:id="@+id/btn_select_date2"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="379dp"
                        android:layout_height="55dp"
                        android:background="@null"
                        android:text="5월 29일"
                        android:fontFamily="@font/nanumgothic_font_family"
                        android:gravity="center"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#D9D9D9"
                        ></LinearLayout>
                    <Button
                        android:id="@+id/btn_select_date3"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="379dp"
                        android:layout_height="55dp"
                        android:background="@null"
                        android:text="5월 30일"
                        android:fontFamily="@font/nanumgothic_font_family"
                        android:gravity="center"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#D9D9D9"
                        ></LinearLayout>
                    <Button
                        android:id="@+id/btn_select_date4"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="379dp"
                        android:layout_height="55dp"
                        android:background="@null"
                        android:text="5월 31일"
                        android:fontFamily="@font/nanumgothic_font_family"
                        android:gravity="center"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#D9D9D9"
                        ></LinearLayout>
                    <Button
                        android:id="@+id/btn_select_date5"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="379dp"
                        android:layout_height="55dp"
                        android:background="@null"
                        android:text="6월 1일"
                        android:fontFamily="@font/nanumgothic_font_family"
                        android:gravity="center"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#D9D9D9"
                        ></LinearLayout>
                    <Button
                        android:id="@+id/btn_select_date6"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="379dp"
                        android:layout_height="55dp"
                        android:background="@null"
                        android:text="6월 2일"
                        android:fontFamily="@font/nanumgothic_font_family"
                        android:gravity="center"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#D9D9D9"
                        ></LinearLayout>
                    <Button
                        android:id="@+id/btn_select_date7"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="379dp"
                        android:layout_height="55dp"
                        android:background="@null"
                        android:text="6월 3일"
                        android:fontFamily="@font/nanumgothic_font_family"
                        android:gravity="center"
                        />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/place_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <ImageView
                    android:id="@+id/question_where"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="7dp"
                    android:src="@drawable/question_where"
                    />
                <LinearLayout
                    android:id="@+id/select_pane_where"
                    android:layout_width="387dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:layout_gravity="center_horizontal"
                    android:orientation="vertical"
                    android:background="@drawable/shadow_box"
                    >
                    <Button
                        android:id="@+id/btn_select_place1"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="379dp"
                        android:layout_height="62dp"
                        android:background="@null"
                        android:text="신촌/홍대"
                        android:fontFamily="@font/nanumgothic_font_family"
                        android:gravity="center"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#D9D9D9"
                        ></LinearLayout>
                    <Button
                        android:id="@+id/btn_select_place2"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="379dp"
                        android:layout_height="62dp"
                        android:background="@null"
                        android:text="건대/왕십리"
                        android:fontFamily="@font/nanumgothic_font_family"
                        android:gravity="center"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#D9D9D9"
                        ></LinearLayout>
                    <Button
                        android:id="@+id/btn_select_place3"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="379dp"
                        android:layout_height="62dp"
                        android:background="@null"
                        android:text="강남"
                        android:fontFamily="@font/nanumgothic_font_family"
                        android:gravity="center"
                        />
                </LinearLayout>
            </LinearLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/appeal_view"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/question_appeal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="18dp"
                        android:layout_marginTop="7dp"
                        android:src="@drawable/question_appeal"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="273dp"
                            android:layout_gravity="center_horizontal"
                            >
                            <EditText
                                android:id="@+id/edittext_appeal"
                                android:layout_width="379dp"
                                android:layout_height="268dp"
                                android:background="@drawable/shadow_box"
                                android:layout_marginTop="7dp"
                                android:gravity="top"
                                android:paddingLeft="15dp"
                                android:paddingRight="15dp"
                                android:paddingTop="15dp"
                                android:paddingBottom="28dp"
                                android:fontFamily="@font/nanumgothic_font_family"
                                android:hint="키, 학력, 나이, 친구들 스타일 등 모든 것을 자랑하세요!"
                                android:textColorHint="@color/colorHint"
                                android:textSize="14dp"
                                android:textColor="@color/colorBlack"
                                />
                            <TextView
                                android:id="@+id/max_appeal_length"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right|bottom"
                                android:layout_marginRight="15dp"
                                android:layout_marginBottom="13dp"
                                android:text="0 / 100"
                                android:fontFamily="@font/nanumgothic_font_family"
                                android:textColor="@color/colorHint"

                                />
                        </FrameLayout>
                    </LinearLayout>
                </LinearLayout>
            </FrameLayout>


        </LinearLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_gravity="bottom"
            android:textSize="14dp">
            <Button
                android:id="@+id/btn_okay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#2B2825"
                android:text="미팅 신청하기!"
                android:textColor="@color/colorPrimary"
                android:fontFamily="@font/nanumgothic_font_family"
                />
            <LinearLayout
                android:id="@+id/ll_for_edit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="375"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btn_delete"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="139"
                    android:text="삭제하기"
                    android:textColor="@color/color4vs4"
                    android:background="@drawable/ic_filter_state_gray"
                    android:fontFamily="@font/nanumgothic_font_family"/>
                />
                <Button
                    android:id="@+id/btn_edit"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="#2B2825"
                    android:layout_weight="236"
                    android:text="미팅 수정하기!"
                    android:textColor="@color/colorPrimary"
                    android:fontFamily="@font/nanumgothic_font_family"
                    />

            </LinearLayout>
        </FrameLayout>
        
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>