<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".MeetingApplicationActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:background="@color/colorPrimary"
            android:theme="@style/MyActionBar2"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/title_application"
                android:layout_gravity="center"
                android:id="@+id/toolbar_title" />
        </android.support.v7.widget.Toolbar>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <Button
                android:id="@+id/selected_type"
                android:layout_width="match_parent"
                android:layout_height="81dp"
                android:background="#32A4E0"/>
            <Button
                android:id="@+id/selected_date"
                android:layout_width="match_parent"
                android:layout_height="81dp"
                android:background="#CC32A4E0"/>
            <Button
                android:id="@+id/selected_place"
                android:layout_width="match_parent"
                android:layout_height="81dp"
                android:background="#8032A4E0"/>
            <LinearLayout
                android:id="@+id/type_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/question_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="142dp"
                    android:src="@drawable/question_type"
                    />
                <LinearLayout
                    android:id="@+id/select_pane_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="29dp"
                    android:orientation="vertical">
                    <Button
                        android:id="@+id/btn_select_2vs2"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="379dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/button_background_non_select"
                        android:text="2:2 소개팅"
                        android:gravity="center"
                        />
                    <Button
                        android:id="@+id/btn_select_3vs3"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="379dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/button_background_non_select"
                        android:text="3:3 미팅"
                        android:gravity="center"
                        />
                    <Button
                        android:id="@+id/btn_select_4vs4"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="379dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/button_background_non_select"
                        android:text="4:4 미팅"
                        android:gravity="center"
                        />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/date_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/question_when"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="87dp"
                    android:src="@drawable/question_when"
                    />
                <LinearLayout
                    android:id="@+id/select_pane_when"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:orientation="vertical"
                    >
                    <Button
                        android:id="@+id/btn_select_date1"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="379dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/button_background_non_select"
                        android:text="5월 28일"
                        android:gravity="center"
                        />
                    <Button
                        android:id="@+id/btn_select_date2"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="379dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/button_background_non_select"
                        android:text="5월 29일"
                        android:gravity="center"
                        />
                    <Button
                        android:id="@+id/btn_select_date3"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="379dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/button_background_non_select"
                        android:text="5월 30일"
                        android:gravity="center"
                        />
                    <Button
                        android:id="@+id/btn_select_date4"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="379dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/button_background_non_select"
                        android:text="5월 31일"
                        android:gravity="center"
                        />
                    <Button
                        android:id="@+id/btn_select_date5"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="379dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/button_background_non_select"
                        android:text="6월 1일"
                        android:gravity="center"
                        />
                    <Button
                        android:id="@+id/btn_select_date6"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="379dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/button_background_non_select"
                        android:text="6월 2일"
                        android:gravity="center"
                        />
                    <Button
                        android:id="@+id/btn_select_date7"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="379dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/button_background_non_select"
                        android:text="6월 3일"
                        android:gravity="center"
                        />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/place_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/question_where"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="7dp"
                    android:src="@drawable/question_where"
                    />
                <LinearLayout
                    android:id="@+id/select_pane_where"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:orientation="vertical"
                    >
                    <Button
                        android:id="@+id/btn_select_place1"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="379dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/button_background_non_select"
                        android:text="신촌/홍대"
                        android:gravity="center"
                        />
                    <Button
                        android:id="@+id/btn_select_place2"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="379dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/button_background_non_select"
                        android:text="건대/왕십리"
                        android:gravity="center"
                        />
                    <Button
                        android:id="@+id/btn_select_place3"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="379dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/button_background_non_select"
                        android:text="강남"
                        android:gravity="center"
                        />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/appeal_view"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/question_appeal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="7dp"
                    android:src="@drawable/question_appeal"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <EditText
                        android:id="@+id/edittext_appeal"
                        android:layout_width="379dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/textbox_appeal"
                        android:gravity="center"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <ImageButton
            android:id="@+id/btn_okay"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="#2B2825"
            android:gravity="bottom"
            android:src="@drawable/text_okay"
            />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>