<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bg"
    android:layout_height="222dp"
    android:layout_width="293dp"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="166dp"
        android:orientation="vertical"
        android:background="@drawable/top_rounded">
        <TextView
            android:id="@+id/label"
            android:background="@drawable/label_2vs2_bg"
            android:layout_width="99dp"
            android:layout_height="24dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="7dp"
            android:textColor="@color/colorPrimary"
            android:text="2:2 소개팅"
            android:textSize="12dp"
            android:gravity="center_horizontal|center_vertical"
            android:fontFamily="@font/roboto_font_family">
        </TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="102.6dp">
            <WebView
                android:id="@+id/description"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="left|center_vertical"
                android:scrollbars="none">
            </WebView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="9.4dp"
            >
            <TextView
                android:id="@+id/rating"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="★★☆☆☆"
                android:gravity="center_horizontal|center_vertical"
                android:textColor="#FF8424"
                android:fontFamily="@font/roboto_font_family"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/point_line"
            android:layout_height="5dp"
            android:layout_width="match_parent"
            android:background="@color/colorPoint">
        </ImageView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_gravity="bottom"
            android:orientation="horizontal"
            android:background="@drawable/bottom_rounded_brown"
            >
            <LinearLayout
                android:layout_width="127.5dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="4.5dp"
                android:layout_marginBottom="11dp"
                android:layout_marginLeft="19dp">
                <TextView
                    android:id="@+id/profile1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="연세대학교 (24)"
                    android:textSize="14dp"
                    android:textColor="@color/colorPrimary"
                    android:fontFamily="@font/roboto_font_family"
                    />
                <TextView
                    android:id="@+id/profile2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="전기전자공학부"
                    android:textSize="12dp"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginTop="1dp"
                    android:fontFamily="@font/roboto_font_family"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="127.5dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="4.5dp"
                android:layout_marginBottom="11dp"
                android:layout_marginRight="19dp">
                <TextView
                    android:id="@+id/date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="5월28일"
                    android:textSize="12dp"
                    android:textColor="@color/colorPrimary"
                    android:fontFamily="@font/roboto_font_family"
                    />
                <TextView
                    android:id="@+id/place"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="신촌/홍대"
                    android:textSize="12dp"
                    android:textColor="@color/colorPrimary"
                    android:fontFamily="@font/roboto_font_family"
                    android:layout_marginTop="1dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>