<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bg"
    android:layout_height="221.5dp"
    android:layout_width="359dp"
    >
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:id="@+id/fl_meeting_card"
            android:layout_width="match_parent"
            android:layout_height="209.35dp"
            android:layout_marginTop="12.15dp"
            android:background="@drawable/profile_card_bg">
        <FrameLayout
            android:layout_width="110.5dp"
            android:layout_height="126dp"
            android:layout_marginTop="29dp"
            android:layout_marginLeft="29dp"
            >
            <com.yamigu.yamigu_app.CustomLayout.CircularImageView
                android:id="@+id/iv_profile"
                android:layout_width="110.5dp"
                android:layout_height="110.5dp"
                android:src="@drawable/user_profile_no_img"
                android:layout_centerVertical="true"/>
            <ImageButton
                android:id="@+id/btn_change_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:src="@drawable/btn_change_profile"
                android:background="@null"
                />
        </FrameLayout>

            <LinearLayout
                android:layout_width="219.5dp"
                android:layout_height="174dp"
                android:layout_gravity="right"
                android:layout_marginTop="12.65dp"
                android:background="@drawable/profile_card_bg"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16.2dp"
                    android:gravity="center_horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_gravity="center_horizontal"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/name"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/roboto_font_family"
                            android:gravity="center_vertical"
                            android:padding="0dp"
                            android:text="김찬열"
                            android:textColor="#000000"
                            android:textSize="25dp"
                            android:textStyle="bold"></TextView>

                        <EditText
                            android:id="@+id/et_nickname"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/roboto_font_family"
                            android:gravity="bottom"
                            android:hint="김찬열"
                            android:paddingLeft="0dp"
                            android:paddingRight="0dp"
                            android:paddingBottom="8dp"
                            android:textColor="@color/colorBlack"
                            android:textSize="25dp"
                            android:textStyle="bold"
                            android:visibility="gone"

                            ></EditText>

                        <TextView
                            android:id="@+id/age"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/roboto_font_family"
                            android:gravity="center_vertical"
                            android:padding="0dp"
                            android:text=" (24)"
                            android:textColor="#000000"
                            android:textSize="25dp"
                            android:textStyle="bold"></TextView>
                    </LinearLayout>

                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="17dp"
                    android:layout_gravity="center_horizontal">

                    <ImageButton
                        android:id="@+id/btn_edit_nickname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:background="@null"
                        android:src="@drawable/button_edit_nickname" />

                    <TextView
                        android:id="@+id/tv_available_nickname"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:text="사용 가능합니다."
                        android:textColor="@color/colorBlue"
                        android:textSize="13dp"
                        android:visibility="gone"></TextView>
                </FrameLayout>

                <TextView
                    android:id="@+id/company"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/roboto_font_family"
                    android:gravity="center_horizontal"
                    android:text="연세대학교"
                    android:textColor="#000000"
                    android:textSize="14dp"></TextView>

                <TextView
                    android:id="@+id/department"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_font_family"
                    android:gravity="center_horizontal"
                    android:text="전기전자공학부"
                    android:textColor="#000000"
                    android:textSize="14dp"></TextView>
            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_gravity="bottom"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_weight="0"
                android:background="@color/colorNonselect">
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <FrameLayout
                    android:layout_width="179.25dp"
                    android:layout_height="match_parent">
                    <ImageButton
                        android:layout_width="179.25dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/icon_notify_big"
                        android:background="?attr/selectableItemBackground"/>
                    <TextView
                        android:id="@+id/num_of_notifi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="96.5dp"
                        android:textSize="18dp"
                        android:text="0"
                        android:fontFamily="@font/roboto_font_family"/>
                </FrameLayout>
                <LinearLayout
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorNonselect">
                </LinearLayout>
                <FrameLayout
                    android:layout_width="179.25dp"
                    android:layout_height="match_parent">
                    <ImageButton
                        android:layout_width="179.25dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/icon_ticket_big"
                        android:background="?attr/selectableItemBackground"/>
                    <TextView
                        android:id="@+id/num_of_ticket"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="96.5dp"
                        android:textSize="18dp"
                        android:text="0"
                        android:fontFamily="@font/roboto_font_family"/>
                </FrameLayout>
            </LinearLayout>
        </LinearLayout>
        </FrameLayout>
        <RelativeLayout
            android:id="@+id/label_certificated"
            android:layout_width="82dp"
            android:layout_height="25.3dp"
            android:background="@drawable/label_certificated_ok_bg"
            android:layout_gravity="right"
            android:layout_marginRight="8dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="인증 완료"
                android:textColor="@color/colorPoint"
                android:textSize="12dp"
                android:fontFamily="@font/roboto_font_family"/>
        </RelativeLayout>
    </FrameLayout>
    <Button
        android:id="@+id/btn_certify"
        android:layout_width="142dp"
        android:layout_height="36dp"
        android:background="@drawable/label_certificating"
        android:text="인증 진행중입니다"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:textSize="14dp"
        android:fontFamily="@font/nanumgothic_font_family"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="72.5dp"
        >
    </Button>
</FrameLayout>