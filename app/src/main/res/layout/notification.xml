<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="68dp"
    android:layout_marginTop="4dp"
    android:background="@color/colorPrimary">
    <TextView
        android:id="@+id/tv_notification_type"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="12dp"
        android:gravity="center_vertical"
        android:text="신청!"
        android:fontFamily="@font/binggrae_font_family"
        android:textStyle="bold"
        android:textSize="14dp">
    </TextView>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="9dp"
        android:weightSum="10"
        android:layout_toRightOf="@+id/tv_notification_type">
        <TextView
            android:id="@+id/tv_notification_content"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:text="5/22 미팅 신청이 들어왔어요!"
            android:textColor="@color/colorBlack"
            android:gravity="bottom">
        </TextView>
        <TextView
            android:id="@+id/tv_notification_time"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:text="10분전"
            android:textSize="10dp"
            android:textColor="@color/colorNonselect"
            android:gravity="top">
        </TextView>
    </LinearLayout>
    <ImageView
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:src="@drawable/baseline_arrow_back_ios_24px"
        android:layout_alignParentRight="true"
        android:layout_marginRight="21dp"
        android:layout_centerVertical="true">
    </ImageView>
</RelativeLayout>
