<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.AllianceListActivity"
    android:background="@color/colorPrimary"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:background="@color/colorPrimary"
            android:theme="@style/MyActionBar2"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:text="프리미엄 제휴매장"
                android:textSize="14dp"
                android:textColor="@color/colorNormal"
                android:textStyle="bold"
                android:fontFamily="@font/nanumgothic_font_family">
            </TextView>
        </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:weightSum="9.99"
        android:background="@drawable/rectangle_gray_solid"
        >
        <Button
            android:id="@+id/btn_date_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="신촌/홍대"
            android:background="?android:selectableItemBackgroundBorderless"
            android:textSize="14sp"
            android:textColor="#FC7F2D"
            android:gravity="center_vertical|center_horizontal"
            android:layout_weight="3.33"
            android:fontFamily="@font/binggrae_font_family"/>
        <Button
            android:id="@+id/btn_date_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="건대/왕십리"
            android:background="?android:selectableItemBackgroundBorderless"
            android:textSize="14sp"
            android:gravity="center_vertical|center_horizontal"
            android:layout_weight="3.33"
            android:fontFamily="@font/binggrae_font_family"/>
        <Button
            android:id="@+id/btn_date_3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="강남"
            android:background="?android:selectableItemBackgroundBorderless"
            android:textSize="14sp"
            android:gravity="center_vertical|center_horizontal"
            android:layout_weight="3.33"
            android:fontFamily="@font/binggrae_font_family"/>
        </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="7.1dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="*프리미엄 제휴매장에서 제휴쿠폰 받아가세요!"
                        android:textSize="13dp"
                        android:textColor="@color/colorBlack"
                        android:fontFamily="@font/nanumgothic_font_family"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="*당일날 해당 지역에서 사용 가능한 제휴쿠폰을 드립니다!"
                        android:textSize="13dp"
                        android:textColor="@color/colorBlack"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/nanumgothic_font_family"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="*매칭 채팅에서 쿠폰 사용하기를 직원에게 부탁하세요!"
                        android:textSize="13dp"
                        android:textColor="@color/colorBlack"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/nanumgothic_font_family"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="12.1dp">
                    <com.yamigu.yamigu_app.CustomLayout.PlaceCard
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:name="오렌지룸 신촌점"
                        app:phone="02-365=0789"
                        app:location="신촌역 5분거리"
                        app:benefit1="제휴 10,000원 쿠폰"
                        app:benefit2="*소주 또는 맥주 2병 제공"
                        app:image="@drawable/img_orangeroom">
                    </com.yamigu.yamigu_app.CustomLayout.PlaceCard>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>