<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bg"
    android:layout_height="222dp"
    android:layout_width="351.8dp"
    android:orientation="vertical"
    android:background="@drawable/meeting_card_bg_wlist">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/label"
            android:src="@drawable/label_2vs2"
            android:layout_width="99dp"
            android:layout_height="24dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="7dp"
            android:scaleType="fitStart"
            >
        </ImageView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="93.6dp">
            <TextView
                android:id="@+id/description"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal|center_vertical"
                android:textStyle="bold"
                android:textSize="16sp"
                android:text="한명이 술을 잘 못마셔요!"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18.4dp"
            >
            <TextView
                android:id="@+id/rating"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="★★☆☆☆"
                android:gravity="center_horizontal|center_vertical"
                android:textColor="#FF8424"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:layout_gravity="bottom"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_width="127.5dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="11dp"
                android:layout_marginBottom="11dp"
                android:layout_marginLeft="42dp">
                <TextView
                    android:id="@+id/profile1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="연세대학교 (24)"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    />
                <TextView
                    android:id="@+id/profile2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="전기전자공학부"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="127.5dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="11dp"
                android:layout_marginBottom="11dp"
                android:layout_marginRight="42dp">
                <TextView
                    android:id="@+id/date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="5월28일"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    />
                <TextView
                    android:id="@+id/place"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="신촌/홍대"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>