<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bg"
    android:layout_height="166dp"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/rounded">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            >
            <ImageView
                android:id="@+id/label"
                android:src="@drawable/label2_2vs2"
                android:layout_width="99dp"
                android:layout_height="24dp"
                android:scaleType="fitStart"
                android:layout_alignParentLeft="true"
                >
            </ImageView>
            <ImageButton
                android:id="@+id/btn_edit_card"
                android:layout_width="114.5dp"
                android:layout_height="16dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/button_edit_meeting"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="35dp"
                >
                <ImageView
                    android:id="@+id/label_matching_completed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/label_matching_completed"
                    android:visibility="invisible"/>
                <TextView
                    android:id="@+id/place"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30dp"
                    android:text="건대/왕십리"
                    android:textColor="@color/colorBlack"/>
                <TextView
                    android:id="@+id/num_of_applying"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="17dp"
                    android:textSize="16dp"
                    android:text="2팀 신청!"
                    android:textColor="@color/colorBlack"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginRight="35dp"
                    >
                    <ImageButton
                        android:id="@+id/btn_view_applying"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn_view_applying"/>
                    <ImageButton
                        android:id="@+id/btn_view_waiting"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn_view_waiting"
                        android:layout_alignParentRight="true"/>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="83.6dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentRight="true"
                android:layout_marginRight="35dp"
                >
                <TextView
                    android:id="@+id/month"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/cal_month"
                    android:text="5월"
                    android:textColor="@color/colorPrimary"
                    android:gravity="center_horizontal|center_vertical"
                    android:textSize="13dp"
                    android:textStyle="bold"/>
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/cal_date"
                        android:text="28일"
                        android:textColor="@color/colorBlack"
                        android:gravity="center_horizontal|center_vertical"
                        android:textSize="30dp"
                        />
                    <TextView
                        android:id="@+id/dday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/cal_dday"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="43dp"
                        android:text="Today"
                        android:textSize="10dp"
                        android:textStyle="bold"
                        android:gravity="center_horizontal|center_vertical"
                        android:textColor="@color/colorPrimary"
                        />
                </FrameLayout>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
    <ImageView
        android:id="@+id/point_line"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#FF8424"
        android:layout_alignParentBottom="true"
        ></ImageView>
    </RelativeLayout>
</LinearLayout>