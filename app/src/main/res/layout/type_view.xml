<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:id="@+id/type_view"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="vertical"
    >
<ImageView
    android:id="@+id/question_type"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="18dp"
    android:src="@drawable/question_type"
    />
<LinearLayout
    android:id="@+id/select_pane_type"
    android:layout_width="387dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="16.7dp"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@drawable/shadow_box">
    <Button
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:padding="0dp"
        android:id="@+id/btn_select_2vs2"
        android:layout_gravity="center_horizontal"
        android:layout_width="379dp"
        android:layout_height="62dp"
        android:background="@null"
        android:text="2:2 미팅"
        android:gravity="center"
        android:fontFamily="@font/nanumgothic_font_family"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#D9D9D9"
        ></LinearLayout>
    <Button
        android:id="@+id/btn_select_3vs3"
        android:layout_gravity="center_horizontal"
        android:layout_width="379dp"
        android:layout_height="62dp"
        android:background="@null"
        android:text="3:3 미팅"
        android:fontFamily="@font/nanumgothic_font_family"
        android:gravity="center"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#D9D9D9"
        ></LinearLayout>
    <Button
        android:id="@+id/btn_select_4vs4"
        android:layout_gravity="center_horizontal"
        android:layout_width="379dp"
        android:layout_height="62dp"
        android:background="@null"
        android:text="4:4 미팅"
        android:fontFamily="@font/nanumgothic_font_family"
        android:gravity="center"
        />
</LinearLayout>
</LinearLayout>