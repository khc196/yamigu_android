<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/filter_fragment_container"
    android:layout_width="match_parent"
    android:layout_height="415dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="415dp"
        android:layout_gravity="bottom"
        android:background="@color/colorPrimary"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="29dp"
            android:text="필터 설정하기"
            android:textColor="#000000"
            android:layout_marginLeft="19dp"
            android:layout_marginTop="44dp"
            android:fontFamily="@font/roboto_font_family">
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="31dp"
            android:layout_marginTop="12dp"
            android:text="인원"
            android:textColor="#000000"
            android:textSize="20dp"
            android:fontFamily="@font/roboto_font_family"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="7dp">
            <Button
                android:id="@+id/btn_type_2vs2"
                android:layout_width="99dp"
                android:layout_height="30dp"
                android:background="@drawable/rounded_gray_full"
                android:text="2:2 미팅"
                android:textSize="12dp"
                android:textColor="@color/colorPrimary"
                android:fontFamily="@font/roboto_font_family"
                >
            </Button>
            <Button
                android:id="@+id/btn_type_3vs3"
                android:layout_width="99dp"
                android:layout_height="30dp"
                android:background="@drawable/rounded_gray_full"
                android:text="3:3 미팅"
                android:textSize="12dp"
                android:textColor="@color/colorPrimary"
                android:layout_marginLeft="23dp"
                android:layout_marginRight="23dp"
                android:fontFamily="@font/roboto_font_family"
                >
            </Button>
            <Button
                android:id="@+id/btn_type_4vs4"
                android:layout_width="99dp"
                android:layout_height="30dp"
                android:background="@drawable/rounded_gray_full"
                android:text="4:4 미팅"
                android:textSize="12dp"
                android:textColor="@color/colorPrimary"
                android:fontFamily="@font/roboto_font_family"
                >
            </Button>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="31dp"
            android:layout_marginTop="13dp"
            android:text="장소"
            android:textColor="#000000"
            android:textSize="20dp"
            android:fontFamily="@font/roboto_font_family"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="7dp">
            <Button
                android:id="@+id/btn_place_1"
                android:layout_width="99dp"
                android:layout_height="30dp"
                android:background="@drawable/rounded_gray_full"
                android:text="신촌/홍대"
                android:textSize="12dp"
                android:textColor="@color/colorPrimary"
                android:fontFamily="@font/roboto_font_family"

                >
            </Button>
            <Button
                android:id="@+id/btn_place_2"
                android:layout_width="99dp"
                android:layout_height="30dp"
                android:background="@drawable/rounded_gray_full"
                android:text="건대/왕십리"
                android:textSize="12dp"
                android:textColor="@color/colorPrimary"
                android:layout_marginLeft="23dp"
                android:layout_marginRight="23dp"
                android:fontFamily="@font/roboto_font_family"
                >
            </Button>
            <Button
                android:id="@+id/btn_place_3"
                android:layout_width="99dp"
                android:layout_height="30dp"
                android:background="@drawable/rounded_gray_full"
                android:text="강남"
                android:textSize="12dp"
                android:textColor="@color/colorPrimary"
                android:fontFamily="@font/roboto_font_family"
                >
            </Button>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="31dp"
            android:layout_marginTop="13dp"
            android:text="나이"
            android:textColor="#000000"
            android:textSize="20dp"
            android:fontFamily="@font/roboto_font_family"
            />

        <LinearLayout
            android:layout_width="345dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="0dp">
            <FrameLayout
                android:layout_width="340dp"
                android:layout_height="42dp"
                >
                <ImageView
                    android:id="@+id/seekbar_bg"
                    android:layout_width="319dp"
                    android:layout_height="1dp"
                    android:background="@color/colorPoint"
                    android:layout_gravity="center_vertical|center_horizontal"
                    />
                <RelativeLayout
                    android:id="@+id/age_bar_bg"
                    android:layout_width="319dp"
                    android:layout_height="1dp"
                    android:layout_gravity="center_vertical|center_horizontal">
                    <ImageView
                        android:id="@+id/iv_minimum_age_bg_deactivate"
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:background="@color/colorGray"
                        android:layout_alignParentLeft="true"/>
                    <ImageView
                        android:id="@+id/iv_maximum_age_bg_deactivate"
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:background="@color/colorGray"
                        android:layout_alignParentRight="true"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/iv_minimum_age"
                        android:layout_width="32.5dp"
                        android:layout_height="42dp"
                        android:cropToPadding="true"
                        android:paddingRight="10.5dp"
                        android:paddingBottom="10.5dp"
                        android:paddingTop="10.5dp"
                        android:src="@drawable/rectangle"
                        android:layout_alignParentLeft="true"
                        />
                    <ImageView
                        android:id="@+id/iv_maximum_age"
                        android:layout_width="32.5dp"
                        android:layout_height="42dp"
                        android:cropToPadding="true"
                        android:paddingLeft="10.5dp"
                        android:paddingBottom="10.5dp"
                        android:paddingTop="10.5dp"
                        android:src="@drawable/rectangle"
                        android:layout_alignParentRight="true"/>
                </RelativeLayout>
            </FrameLayout>
            <RelativeLayout
                android:layout_width="345dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                >
                <TextView
                    android:id="@+id/tv_minimum_age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20살"
                    android:textColor="@color/colorNormal"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    android:layout_alignParentLeft="true"
                    android:fontFamily="@font/roboto_font_family"
                    />
                <TextView
                    android:id="@+id/tv_maximum_age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="30+살"
                    android:textColor="@color/colorNormal"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    android:layout_alignParentRight="true"
                    android:fontFamily="@font/roboto_font_family"
                    />
            </RelativeLayout>

        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal"
                android:layout_alignParentBottom="true"
                android:weightSum="1">
                <Button
                    android:id="@+id/btn_apply_filter"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.63"
                    android:background="@color/colorPoint"
                    android:text="32팀 보기"
                    android:gravity="center_horizontal|center_vertical"
                    android:textColor="@color/colorPrimary"
                    android:fontFamily="@font/roboto_font_family"
                    />
                <Button
                    android:id="@+id/btn_cancel_filter"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.37"
                    android:background="@drawable/rectangle_orange_solid"
                    android:text="해제하기"
                    android:gravity="center_horizontal|center_vertical"
                    android:textColor="@color/colorPoint"
                    android:fontFamily="@font/roboto_font_family"
                    />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</FrameLayout>