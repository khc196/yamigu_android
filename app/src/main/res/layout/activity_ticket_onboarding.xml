<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.TicketOnboardingActivity"
    android:background="@color/colorPrimary">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:background="@color/colorPrimary"
            android:theme="@style/MyActionBar2"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:text="야미구 티켓으로"
                android:textSize="14dp"
                android:textColor="@color/colorNormal"
                android:fontFamily="@font/nanumgothic_font_family"
                android:textStyle="bold">
            </TextView>
        </android.support.v7.widget.Toolbar>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v4.view.ViewPager
            android:id="@+id/screen_viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </android.support.v4.view.ViewPager>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <android.support.design.widget.TabLayout
                app:tabBackground="@drawable/page_indicator_selector"
                app:tabIndicatorHeight="0dp"
                app:tabRippleColor="@null"
                android:id="@+id/tab_indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="117dp">
            </android.support.design.widget.TabLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="39dp"
                android:layout_marginRight="39dp"
                android:layout_marginBottom="20dp">
                <Button
                    android:layout_alignParentBottom="true"
                    android:id="@+id/btn_buy_ticket"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:background="@drawable/state_pressed_orange"
                    android:text="야미구 티켓 구매하기"
                    android:textSize="14dp"
                    android:textColor="@color/colorPoint"
                    style="?android:attr/borderlessButtonStyle"
                    android:fontFamily="@font/roboto_font_family"/>
            </RelativeLayout>
        </RelativeLayout>
    </FrameLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>