<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:id="@+id/appeal_view"
android:layout_width="match_parent"
android:layout_height="match_parent">
<LinearLayout
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/question_appeal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="7dp"
        android:src="@drawable/question_appeal"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="273dp"
                android:layout_gravity="center_horizontal"
                >
                <EditText
                    android:id="@+id/edittext_appeal"
                    android:layout_width="379dp"
                    android:layout_height="268dp"
                    android:background="@drawable/shadow_box"
                    android:layout_marginTop="7dp"
                    android:gravity="top"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="28dp"
                    android:fontFamily="@font/nanumgothic_font_family"
                    android:hint="키, 학력, 나이, 친구들 스타일 등 모든 것을 자랑하세요!"
                    android:textColorHint="@color/colorHint"
                    android:textSize="14dp"
                    android:textColor="@color/colorBlack"
                    />
                <TextView
                    android:id="@+id/max_appeal_length"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|bottom"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="13dp"
                    android:text="0 / 100"
                    android:fontFamily="@font/nanumgothic_font_family"
                    android:textColor="@color/colorHint"

                    />
            </FrameLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="21dp"
                android:text="개인 연락처(전화번호, 카톡, 이메일 등) 입력 불가"
                android:fontFamily="@font/nanumgothic_font_family"
                android:textColor="@color/colorNonselect"
                android:textSize="14dp"
                >
            </TextView>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
</FrameLayout>